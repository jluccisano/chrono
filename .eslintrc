{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended", "xo-react/space",  "xo-space/esnext"],
  "rules": {
    "comma-dangle": 0,
    "linebreak-style": 0
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.4.2"
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  }
}
